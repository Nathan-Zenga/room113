		<header>
			<div class="col-sm-2 header-menu">
				<div class="col-xs-6 logo"><a href="/"></a></div>
				<div class="col-xs-6 mb-view header-menu-icon">
					<i class="fas fa-bars"></i>
					<i class="fas fa-times" style="display: none;"></i>
				</div>
			</div>
			<div class="col-sm-10 header-banner">
				<div class="carousel slide" id="featured-spotlight">

					<!-- Container for slides -->
					<div class="carousel-inner">
						<%_ items.forEach((item, i) => { _%>
							<div class="item <%= i == 0 ? 'active' : '' %>">
								<div class="img"></div>
								<div class="carousel-caption">
									<h3 class="caption-headline"><%= item.headline %></h3>
									<!-- <div class="caption-text"></div> -->
								</div>
							</div>
						<%_ }) _%>
					</div>

					<!-- Left + right arrow controls -->
					<a class="left carousel-control" data-slide="prev">
						<span class="glyphicon glyphicon-chevron-left"></span>
						<span class="sr-only">Previous</span>
					</a>
					<a class="right carousel-control" data-slide="next">
						<span class="glyphicon glyphicon-chevron-right"></span>
						<span class="sr-only">Next</span>
					</a>
				</div>
			</div>
		</header>