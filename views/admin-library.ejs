<%_ include partials/header _%>
		<div class="form-container centre" id="newpost">
			<form class="form-group">
				<fieldset>
					<label class="sr-only">Title</label>
					<input class="form-control details gap" type="text" id="title" name="title" placeholder="Title">

					<label class="sr-only">Subtitle</label>
					<input class="form-control details gap" type="text" id="subtitle" name="subtitle" placeholder="Subtitle">

					<label class="sr-only">Text body</label>
					<textarea class="form-control details gap" type="text" id="textbody" name="textbody" placeholder="Write your stuff..."></textarea>

					<label class="sr-only">Tags</label>
					<input class="form-control details gap" type="text" id="tags" name="tags" placeholder="Tags (separate each with commas)">
				</fieldset>
			</form>
			<label class="sr-only">Media Upload</label>
			<form class="form-group gap" id="uploader" method="post" action="/library/admin/blog/post/media/upload" enctype="multipart/form-data">
				<div class="input-group">
					<label class="input-group-btn">
						<span class="btn">
							Choose image&hellip; <input type="file" name="img" style="display: none;">
						</span>
					</label>
					<input type="text" class="form-control filename-display" readonly>
				</div>
				<input class="form-control submit" type="submit" style="display: none" value="Post">
			</form>
			<label class="sr-only">POST</label>
			<input class="form-control submit" type="submit" value="Post">
			<div class="result"></div>
		</div>
<%_ include partials/footer _%>